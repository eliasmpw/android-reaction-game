<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/firstPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="41dp"
            android:text="1ST"
            android:textColor="#ff0000"
            app:layout_constraintBottom_toTopOf="@+id/SecondPlace"
            app:layout_constraintEnd_toStartOf="@+id/firstPlaceScore"
            app:layout_constraintHorizontal_bias="0.408"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.546" />

        <TextView
            android:id="@+id/firstPlaceScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="152dp"
            android:layout_marginEnd="80dp"
            android:text="Points"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ff0000"
            app:layout_constraintBottom_toTopOf="@+id/SecondPlace"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.988"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/SecondPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="49dp"
            android:text="2ND"
            android:textColor="#ff0000"
            app:layout_constraintBottom_toTopOf="@+id/ThirdPlace"
            app:layout_constraintStart_toStartOf="@+id/ThirdPlace"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintVertical_bias="0.844" />

        <TextView
            android:id="@+id/SecondPlaceScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="80dp"
            android:text="Points"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ff0000"
            app:layout_constraintBottom_toBottomOf="@+id/SecondPlace"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.981"
            app:layout_constraintStart_toEndOf="@+id/SecondPlace"
            app:layout_constraintTop_toBottomOf="@+id/firstPlaceScore"

            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/ThirdPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:layout_marginBottom="312dp"
            android:text="3RD"
            android:textColor="#ff0000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"

            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/forthPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:layout_marginBottom="216dp"
            android:text="4th"
            android:textColor="#ff0000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ThirdPlace"

            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/fifthPlace"
            android:layout_width="15dp"
            android:layout_height="17dp"
            android:layout_marginStart="76dp"
            android:text="5th"
            android:textColor="#ff0000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.012"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/forthPlace"

            app:layout_constraintVertical_bias="0.497" />

        <TextView
            android:id="@+id/ThirdPlaceScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="Points"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ff0000"
            app:layout_constraintEnd_toEndOf="@+id/SecondPlaceScore"
            app:layout_constraintHorizontal_bias="1.0"

            app:layout_constraintStart_toStartOf="@+id/SecondPlaceScore"
            app:layout_constraintTop_toBottomOf="@+id/SecondPlaceScore" />

        <TextView
            android:id="@+id/forthPlaceScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="188dp"
            android:text="Points"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ff0000"
            app:layout_constraintEnd_toEndOf="@+id/SecondPlaceScore"
            app:layout_constraintHorizontal_bias="1.0"

            app:layout_constraintStart_toStartOf="@+id/SecondPlaceScore"
            app:layout_constraintTop_toBottomOf="@+id/SecondPlaceScore" />

        <TextView
            android:id="@+id/fifthPlaceScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="308dp"
            android:text="Points"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ff0000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/SecondPlaceScore"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/SecondPlaceScore"
            app:layout_constraintTop_toBottomOf="@+id/SecondPlaceScore"

            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textViewGameID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GameID"
            android:textColor="#ffffff"
            android:textSize="26sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintVertical_bias="0.078" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>